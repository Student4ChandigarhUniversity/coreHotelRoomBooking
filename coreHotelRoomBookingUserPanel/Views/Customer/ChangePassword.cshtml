@model coreHotelRoomBookingUserPanel.Models.Customers

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>ChangePassword</h2>

<h4>Customers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ChangePassword" asp-controller="Customer">
            <div class="container">
                <div class="row">
                    <div >

                        <label>Current Password</label>
                        <div class="form-group pass_show">
                            <input type="password" name="oldpassword" class="form-control" placeholder="Current Password">
                        </div>
                        <label>New Password</label>
                        <div class="form-group pass_show">
                            <input type="password" name="newpassword" class="form-control" placeholder="New Password">
                        </div>
                        <label>Confirm Password</label>
                        <div class="form-group pass_show">
                            <input type="password" name="newpasswordagain" class="form-control" placeholder="Confirm Password">
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

