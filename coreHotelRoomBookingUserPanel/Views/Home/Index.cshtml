@model IEnumerable<coreHotelRoomBookingUserPanel.Models.Hotels>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Hotel Room Booking</h1>
            <p class="lead text-muted">
                The management and booking of rooms in large buildings is a tedious and complicated task. The combination of different rooms with different sizes and equipment, the possibility to choose between different dates and times is the reason
                why a good booking system is needed to make this task as easy as possible
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            
            <div class="row">
                @foreach (var item in Model)
                {
                    <!--Thumbnail Starts-->
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.HotelImage" class="bd-placeholder-img card-img-top image"/>

                        
                        <div class="card-body">
                            <p class="card-text">@item.HotelName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Home" asp-action="HotelRoomsIndex" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View Rooms</a>
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
                    <!--Thumbnail Ends-->
                }
                
            </div>
        </div>
    </div>

</main>



