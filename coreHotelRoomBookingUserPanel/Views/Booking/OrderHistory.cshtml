<div>OrderHistory</div>
<table class="table table-hover table table-bordered">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Total Amount
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.OHistory)
        {
            <tr>
                <td>
                    @item.BookingDate
                </td>
                <td>
                    @item.TotalAmount
                </td>
                <td>
                    <a asp-controller="Booking" asp-action="historydetails" asp-route-id="@item.BookingId" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
